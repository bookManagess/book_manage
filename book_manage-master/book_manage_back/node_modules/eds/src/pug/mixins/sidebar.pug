// Sidebar
mixin sidebar(options)
  aside.col-md-3.col-sm-3.sidebar
    ul.sidenav.dropable.sticky
      each option, index in options
        -
          let active = '';
        if index === 0
          -
            active = 'active'
        if option.items
          li
            a(href='#' class=active data-edstarget="i18n" data-i18n=option.title)
            ul
              each item, index in option.items
                li
                  a(href=item.href data-edstarget="i18n" data-i18n=item.title)
        else
          li
            a(href=option.href class=active data-edstarget="i18n" data-i18n=option.title)
