extends ../pug/layouts/basic.pug

block sidebar
	include ../pug/mixins/sidebar.pug
	-
		const sidebar = [{
			title: 'index.sidebar.userstory.title',
			href: '#userstory'
		}, {
			title: 'index.sidebar.sitemap.title',
			href: '#sitemap'
		}, {
			title: 'index.sidebar.overview.title',
			href: '#overview'
		}];
	+sidebar(sidebar)

block articleHeader
	h1(data-edstarget="i18n" data-i18n='index.articleHeader.title')
	p(data-edstarget="i18n" data-i18n='index.articleHeader.content')

block article
	section
		h2#userstory
			a(href='#userstory' data-edstarget="i18n" data-i18n='index.sidebar.userstory.title')
		div(data-edstarget="drawio" data-edsfoldername="userstory")
			span {{file}}
	section
		h2#sitemap
			a(href='#sitemap' data-edstarget="i18n" data-i18n='index.sidebar.sitemap.title')
		#sitemapContainer.chart
	section
		h2#overview
			a(href='#overview' data-edstarget="i18n" data-i18n='index.sidebar.overview.title')
		ul.categorized-view.view-col-3
			li
				h5 Functional Map
				div(data-edstarget="drawio" data-edsfoldername="functionalmap")
					a(href='functionalmap.html#' + '{{fileName}}') {{fileName}}
			li
				h5 Flowchart
				div(data-edstarget="drawio" data-edsfoldername="flowchart")
					a(href='flowchart.html#' + '{{fileName}}') {{fileName}}
	
	
